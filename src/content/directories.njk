---
pagination:
  data: groupedFilesByDir
  size: 1
  alias: dir
permalink: "/{{ dir }}/"
layout: base.njk
---

<h1>{{ dir }}</h1>
{% set totalPropagation =  groupedFilesByDir[dir].averagePropagation | round(2) %}
<p><strong>Average Propagation:</strong> <span class="{{ totalPropagation | rangeClass }}">{{ totalPropagation }}%</span></p>

{% include 'homeLink.njk' %}

<ul>
  {% for file in groupedFilesByDir[dir].files %}
    {% set filePropagation =  file.propagationData.percentage | round(2) %}
    <li>
      <a href="/{{ file.relativePath | url }}">{{ file.fileName }}</a>
      <span class="{{ filePropagation | rangeClass }}">{{ filePropagation }}%</span>
    </li>
  {% endfor %}
</ul>

