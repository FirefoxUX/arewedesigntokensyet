{
  "private": true,
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@eslint/js": "^9.24.0",
    "@testing-library/jest-dom": "^6.6.3",
    "chart.js": "^4.4.9",
    "chartjs-adapter-luxon": "^1.3.1",
    "concurrently": "^9.1.2",
    "eleventy-auto-cache-buster": "^0.8.1",
    "esbuild": "^0.25.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jest": "^28.11.0",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "lit": "^3.3.0",
    "luxon": "^3.6.1",
    "minimatch": "^10.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "shiki": "^3.2.2"
  },
  "scripts": {
    "clean": "rimraf --glob './build/**/*'",
    "build": "npm run clean && npm run build:components && npm run build:data && npm run eleventy:build",
    "build:components": "node esbuild.config.js",
    "build:components:watch": "node esbuild.config.js --watch",
    "build:data": "node bin/buildTokenData.js",
    "build:historyEntry": "node bin/updatePropagationHistory.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "eleventy:watch": "npm run build:components && eleventy --serve --config=./eleventy.config.js",
    "eleventy:build": "BUILD_ENV=production eleventy --config=./eleventy.config.js --pathprefix=arewedesigntokensyet",
    "prettier": "prettier --write '**'",
    "prettier-ci": "prettier -c '**'",
    "pre-commit-checks": "lint-staged",
    "postinstall": "husky",
    "start": "concurrently \"npm run build:components:watch\" \"npm run eleventy:watch\"",
    "test-ci": "npm run lint && npm run prettier-ci && npm run test",
    "test": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --watch --no-coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "prettier --write '**'",
      "eslint"
    ]
  },
  "overrides": {
    "glob": "^11.0.1"
  }
}
